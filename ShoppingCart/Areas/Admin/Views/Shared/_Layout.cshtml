<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/images/icon.png">
    <title>Интернет-магазин смартфонов </title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
    <body class="d-flex flex-column" style="background-color: #FFF;">
        <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid mx-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">PhoneStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <vc:brands category-slug="@ViewBag.BrandSlug" />
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                         <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Админ-панель</a>
                          </li>
                          <li class="nav-item">
                              <form method="post" asp-controller="Account" asp-action="Logout">
                                  <button class="nav-link" type="submit">
                                      ВЫХОД [ADMIN]
                                  </button>
                              </form>
                          </li>
                    </ul>
                </div>
            </div>
        </nav>
        </header>

        <div class="container mt-5 flex-grow-1">
            <main role="main" class="pb-3">
                <partial name="_NotificationPartial" />
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
