@model PhoneStore.Models.Phone

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать товар</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Image" />
            <p>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            </p>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            </p>
            <div class="form-group">
                <label>Бренд</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                    <option value="0">Выберите бренд</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <p>
                <div class="form-group">
                 <label>Текущее изображение</label>
                 <img src="/images/@Model.Image" width="180" alt="" />
                </div>
            </p>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="ImageUpload" class="form-control" />
                <img id="imgpreview" class="pt-2" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            
                <div class="form-group">
                    <button class="btn btn-outline-primary m-2">Редактировать</button>
                </div>
            <p></p>
        </form>
    </div>
</div>

<div>
    <a style="margin-left: 10px;" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });

        CKEDITOR.replace('Description');
    </script>
}
